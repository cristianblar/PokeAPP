{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "prettier"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["src", "node_modules"]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["prettier", "import"],
  "rules": {
    "prettier/prettier": "error",
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "import/no-unresolved": 0
  }
}
